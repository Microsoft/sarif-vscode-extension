{
    "name": "sarif-viewer",
    "displayName": "Sarif Viewer",
    "description": "The Sarif Viewer extension visualizes the results in a Sarif file",
    "author": "Microsoft Corporation",
    "license": "MIT",
    "version": "2.16.0",
    "publisher": "MS-SarifVSCode",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/sarif-vscode-extension.git"
    },
    "bugs": {
        "url": "https://github.com/Microsoft/sarif-vscode-extension/issues"
    },
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#c9c2a0",
        "theme": "light"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "sarif"
    ],
    "engines": {
        "vscode": "^1.43.0"
    },
    "activationEvents": [
        "onLanguage:json",
        "onCommand:extension.sarif.Convert",
        "onCommand:extension.sarif.LaunchExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "title": "Sarif Viewer",
            "properties": {
                "sarif-viewer.rootpaths": {
                    "type": "array",
                    "default": [
                        "c:\\sample\\path"
                    ],
                    "description": "%configuration.sarif-viewer.rootpaths.description%"
                },
                "sarif-viewer.resultsListHideColumns": {
                    "default": [
                        "automationCat",
                        "automationId",
                        "baselineState",
                        "rank",
                        "logicalLocation",
                        "runId",
                        "sarifFile"
                    ],
                    "description": "%configuration.sarif-viewer.resultsListHideColumns.description%",
                    "type": "array",
                    "items": {
                        "enum": [
                            "automationCat",
                            "automationId",
                            "baselineState",
                            "kind",
                            "message",
                            "rank",
                            "resultFile",
                            "resultStartPos",
                            "logicalLocation",
                            "ruleId",
                            "ruleName",
                            "runId",
                            "sarifFile",
                            "severityLevel",
                            "tool"
                        ],
                        "enumDescriptions": [
                            "%automationCat.description%",
                            "%automationId.description%",
                            "%baselineState.description%",
                            "%kind.description%",
                            "%message.description%",
                            "%rank.description%",
                            "%resultFile.description%",
                            "%resultStartPos.description%",
                            "%logicalLocation.description%",
                            "%ruleId.description%",
                            "%ruleName.description%",
                            "%runId.description%",
                            "%sarifFile.description%",
                            "%severityLevel.description%",
                            "%tool.description%"
                        ]
                    }
                },
                "sarif-viewer.resultsListGroupBy": {
                    "default": "resultFile",
                    "description": "%configuration.sarif-viewer.resultsListGroupBy.description%",
                    "type": "string",
                    "enum": [
                        "automationCat",
                        "automationId",
                        "baselineState",
                        "kind",
                        "message",
                        "rank",
                        "resultFile",
                        "resultStartPos",
                        "logicalLocation",
                        "ruleId",
                        "ruleName",
                        "runId",
                        "sarifFile",
                        "severityLevel",
                        "tool"
                    ],
                    "enumDescriptions": [
                        "%automationCat.description%",
                        "%automationId.description%",
                        "%baselineState.description%",
                        "%kind.description%",
                        "%message.description%",
                        "%rank.description%",
                        "%resultFile.description%",
                        "%resultStartPos.description%",
                        "%logicalLocation.description%",
                        "%ruleId.description%",
                        "%ruleName.description%",
                        "%runId.description%",
                        "%sarifFile.description%",
                        "%severityLevel.description%",
                        "%tool.description%"
                    ]
                },
                "sarif-viewer.resultsListSortBy": {
                    "default": {
                        "column": "severityLevel",
                        "ascending": true
                    },
                    "description": "%configuration.sarif-viewer.resultsListSortBy.description%",
                    "type": "object",
                    "properties": {
                        "column": {
                            "type": "string",
                            "enum": [
                                "automationCat",
                                "automationId",
                                "baselineState",
                                "kind",
                                "message",
                                "rank",
                                "resultFile",
                                "resultStartPos",
                                "logicalLocation",
                                "ruleId",
                                "ruleName",
                                "runId",
                                "sarifFile",
                                "severityLevel",
                                "tool"
                            ]
                        },
                        "ascending": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "languages": [
            {
                "id": "json",
                "extensions": [
                    ".sarif"
                ]
            }
        ],
        "commands": [
            {
                "command": "extension.sarif.Convert",
                "title": "%commands.extension.sarif.Convert.title%",
                "category": "%commands.category%"
            },
            {
                "command": "extension.sarif.LaunchExplorer",
                "title": "%commands.extension.sarif.LaunchExplorer.title%",
                "category": "%commands.category%"
            },
            {
                "command": "extension.sarif.nextCodeFlowStep",
                "title": "%commands.extension.sarif.nextCodeFlowStep.title%",
                "category": "%commands.category%"
            },
            {
                "command": "extension.sarif.previousCodeFlowStep",
                "title": "%commands.extension.sarif.previousCodeFlowStep.title%",
                "category": "%commands.category%"
            },
            {
                "command": "extension.sarif.openLogFiles",
                "title": "%commands.extension.sarif.openeLogFiles"
            },
            {
                "command": "extension.sarif.closeLogFiles",
                "title": "%commands.extension.sarif.closeLogFiles"
            }
        ],
        "keybindings": [
            {
                "command": "extension.sarif.nextCodeFlowStep",
                "key": "f6",
                "when": "!inDebugMode"
            },
            {
                "command": "extension.sarif.previousCodeFlowStep",
                "key": "shift+f6",
                "when": "!inDebugMode"
            },
            {
                "command": "extension.sarif.LaunchExplorer",
                "key": "ctrl+l ctrl+e"
            }
        ]
    },
    "scripts": {
        "buildExplorer": "tsc --b tsconfig.explorer.json",
        "buildExplorerWatch": "tsc --b tsconfig.explorer.json -watch",
        "vscode:prepublish": "npm run compile & npm run buildExplorer",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js",
        "lint": "tslint --project ./ -t verbose",
        "installNodeModules": "npm install"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/jquery": "^3.3.30",
        "@types/markdown-it": "0.0.9",
        "@types/mocha": "^7.0.2",
        "@types/node": "^7.10.7",
        "@types/sarif": "^2.1.2",
        "mocha": "^6.2.0",
        "tslint-microsoft-contrib": "^6.0.0",
        "tslint-no-unused-expression-chai": "^0.1.4",
        "typescript": "^3.8.3",
        "vscode": "^1.1.36",
        "vscode-test": "^1.0.2",
        "tslint": "^6.1.1"
    },
    "dependencies": {
        "@microsoft/sarif-multitool": "^2.2.2",
        "json-source-map": "^0.4.0",
        "jsonpointer": "4.0.1",
        "markdown-it": "^9.0.1",
        "requirejs": "^2.3.6",
        "vscode-nls": "^4.1.2"
    }
}
