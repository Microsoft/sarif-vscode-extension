{
    "name": "sarif-viewer",
    "displayName": "Sarif Viewer",
    "description": "The Sarif Viewer extension visualizes the results in a Sarif file",
    "author": "Microsoft Corporation",
    "license": "MIT",
    "version": "2.14.0",
    "publisher": "MS-SarifVSCode",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/sarif-vscode-extension.git"
    },
    "bugs": {
        "url": "https://github.com/Microsoft/sarif-vscode-extension/issues"
    },
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#c9c2a0",
        "theme": "light"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "sarif"
    ],
    "engines": {
        "vscode": "^1.32.0"
    },
    "activationEvents": [
        "onLanguage:json",
        "onCommand:extension.sarif.Convert",
        "onCommand:extension.sarif.LaunchExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "title": "Sarif Viewer",
            "properties": {
                "sarif-viewer.rootpaths": {
                    "type": "array",
                    "default": [
                        "c:\\sample\\path"
                    ],
                    "description": "Add root paths for default mapping of locations in the sarif file that can't be found (ex. the local root directory of your repo)"
                },
                "sarif-viewer.resultsListHideColumns": {
                    "default": [
                        "automationCat",
                        "automationId",
                        "baselineState",
                        "rank",
                        "logicalLocation",
                        "runId",
                        "sarifFile"
                    ],
                    "description": "The list of columns to hide from the results list",
                    "type": "array",
                    "items": {
                        "enum": [
                            "automationCat",
                            "automationId",
                            "baselineState",
                            "kind",
                            "message",
                            "rank",
                            "resultFile",
                            "resultStartPos",
                            "logicalLocation",
                            "ruleId",
                            "ruleName",
                            "runId",
                            "sarifFile",
                            "severityLevel",
                            "tool"
                        ]
                    }
                },
                "sarif-viewer.resultsListGroupBy": {
                    "default": "resultFile",
                    "description": "The column to group the results list by",
                    "type": "string",
                    "enum": [
                        "automationCat",
                        "automationId",
                        "baselineState",
                        "kind",
                        "message",
                        "rank",
                        "resultFile",
                        "resultStartPos",
                        "logicalLocation",
                        "ruleId",
                        "ruleName",
                        "runId",
                        "sarifFile",
                        "severityLevel",
                        "tool"
                    ]
                },
                "sarif-viewer.resultsListSortBy": {
                    "default": {
                        "column": "severityLevel",
                        "ascending": true
                    },
                    "description": "The column to sort the results list by(per group) and the order",
                    "type": "object",
                    "properties": {
                        "column": {
                            "type": "string",
                            "enum": [
                                "automationCat",
                                "automationId",
                                "baselineState",
                                "kind",
                                "message",
                                "rank",
                                "resultFile",
                                "resultStartPos",
                                "logicalLocation",
                                "ruleId",
                                "ruleName",
                                "runId",
                                "sarifFile",
                                "severityLevel",
                                "tool"
                            ]
                        },
                        "ascending": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "languages": [
            {
                "id": "json",
                "extensions": [
                    ".sarif"
                ]
            }
        ],
        "commands": [
            {
                "command": "extension.sarif.Convert",
                "title": "Convert and open a non-sarif file",
                "category": "Sarif"
            },
            {
                "command": "extension.sarif.LaunchExplorer",
                "title": "Launch the Sarif Explorer",
                "category": "Sarif"
            },
            {
                "command": "extension.sarif.nextCodeFlowStep",
                "title": "Next Code Flow step",
                "category": "Sarif"
            },
            {
                "command": "extension.sarif.previousCodeFlowStep",
                "title": "Previous Code Flow step",
                "category": "Sarif"
            }
        ],
        "keybindings": [
            {
                "command": "extension.sarif.nextCodeFlowStep",
                "key": "f6",
                "when": "!inDebugMode"
            },
            {
                "command": "extension.sarif.previousCodeFlowStep",
                "key": "shift+f6",
                "when": "!inDebugMode"
            },
            {
                "command": "extension.sarif.LaunchExplorer",
                "key": "ctrl+l ctrl+e"
            }
        ]
    },
    "scripts": {
        "prevscode:prepublish": "tsc -p tsconfig.explorer.json",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "lint": "tslint --project ./ -t verbose"
    },
    "devDependencies": {
        "@types/jquery": "^3.3.30",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.10.7",
        "tslint": "^5.18.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.35"
    },
    "dependencies": {
        "@types/sarif": "^2.1.1",
        "jsdom": "^11.12.0",
        "json-source-map": "^0.4.0"
    }
}
